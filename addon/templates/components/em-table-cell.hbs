{{#if _isPending}}
  <i class="waiting"></i>&nbsp;Loading...&nbsp;
{{else}}
  {{#if _cellContent}}
    {{#if columnDefinition.cellComponentName}}
      {{component columnDefinition.cellComponentName content=_cellContent}}
    {{else}}
      {{_cellContent}}
    {{/if}}
  {{else}}
    <span class="message">Not Available!</span>
  {{/if}}
{{/if}}